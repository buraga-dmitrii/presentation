%h3 Connections
%h5= flash[:notice] if flash[:notice]
= form_tag("/users/connections", method: "post") do
  = label_tag :name, "Name"
  = text_field_tag(:name)
  = submit_tag "Create"

%table
  %thead
    %td ID
    %td Name
    %td Accounts
    %td Created
    %td Action
  %tbody
  - @connections.each do |connection|
    %tr
      %td= connection.id
      %td= connection.name
      %td= connection.accounts.count
      %td= connection.created_at.strftime("%Y-%m-%d %H:%M:%S")
      %td= button_to "Destroy", users_connection_path(connection), method: :delete
