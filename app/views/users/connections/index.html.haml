%h3 User
%code= "Email: #{current_user.email}"
%br
%code= "App id: #{current_user.app_id}"
%br
%code= "Secret: #{current_user.secret}"
%br
%br
= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-warning"
%hr
%h3 Connections
= form_tag("/users/connections", method: "post", class: "form form-inline") do
  .form-group
    = label_tag :name, "Name"
    = text_field_tag :name, nil, { class: "form-control" }
  = submit_tag "Create", class: "btn btn-success"
%br
%table.table.table-bordered
  %thead
    %td ID
    %td Name
    %td Accounts
    %td Created
    %td Action
  %tbody
  - @connections.each do |connection|
    %tr
      %td= connection.id
      %td= connection.name
      %td= link_to connection.accounts.count, users_accounts_path(connection_id: connection.id)
      %td= connection.created_at.strftime("%Y-%m-%d %H:%M:%S")
      %td= button_to "Destroy", users_connection_path(connection), method: :delete, class: "btn btn-danger"
