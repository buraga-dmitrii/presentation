%h3 User
%code= "Email: #{current_user.email}"
%br
%code= "App id: #{current_user.app_id}"
%br
%code= "Secret: #{current_user.secret}"
%hr
%h3 Connections
%h5= flash[:notice] if flash[:notice]
= form_tag("/users/connections", method: "post") do
  = label_tag :name, "Name"
  = text_field_tag(:name)
  = submit_tag "Create"

%table
  %thead
    %td ID
    %td Name
    %td Accounts
    %td Created
    %td Action
  %tbody
  - @connections.each do |connection|
    %tr
      %td= connection.id
      %td= connection.name
      %td= link_to connection.accounts.count, users_accounts_path(connection_id: connection.id)
      %td= connection.created_at.strftime("%Y-%m-%d %H:%M:%S")
      %td= button_to "Destroy", users_connection_path(connection), method: :delete
